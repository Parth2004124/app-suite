:root {
    --bg-color: #0d0d12;
    --text-primary: #ffffff;
    --text-secondary: #a0a0ab;
    --accent-blue: #00f0ff;
    --accent-red: #ff003c;
    --glass-bg: rgba(255, 255, 255, 0.03);
    --glass-border: rgba(255, 255, 255, 0.08);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    background-color: var(--bg-color);
    color: var(--text-primary);
    font-family: 'Inter', sans-serif;
    overflow-x: hidden;
    line-height: 1.6;
}

h1, h2, .logo {
    font-family: 'Outfit', sans-serif;
}

/* Background Glows */
.glow-bg {
    position: fixed;
    top: 0; left: 0; width: 100vw; height: 100vh;
    z-index: -1;
    background: 
        radial-gradient(circle at 15% 50%, rgba(0, 240, 255, 0.05), transparent 40%),
        radial-gradient(circle at 85% 30%, rgba(255, 0, 60, 0.05), transparent 40%);
    pointer-events: none;
}

.gradient-text {
    background: linear-gradient(90deg, var(--accent-blue), var(--accent-red));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

/* Nav */
.navbar {
    position: fixed;
    top: 0; width: 100%;
    padding: 20px 50px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    backdrop-filter: blur(10px);
    z-index: 100;
    border-bottom: 1px solid var(--glass-border);
}

.logo {
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: 2px;
}
.logo span { color: var(--accent-blue); }

.nav-links {
    list-style: none;
    display: flex;
    gap: 30px;
}
.nav-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 600;
    transition: color 0.3s ease;
}
.nav-links a:hover {
    color: var(--accent-blue);
}

/* Panels */
.panel {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 100px 5vw;
}

/* Hero */
.hero-title {
    font-size: 5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 20px;
}
.hero-subtitle {
    font-size: 1.2rem;
    color: var(--text-secondary);
    max-width: 500px;
    margin-bottom: 50px;
}

/* Scroll Indicator */
.scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
    font-size: 0.8rem;
    color: var(--text-secondary);
    letter-spacing: 2px;
}
.mouse {
    width: 24px; height: 40px;
    border: 2px solid var(--text-secondary);
    border-radius: 12px;
    position: relative;
}
.wheel {
    width: 4px; height: 8px;
    background: var(--accent-blue);
    border-radius: 2px;
    position: absolute;
    top: 6px; left: 50%;
    transform: translateX(-50%);
    animation: scroll 1.5s infinite;
}
@keyframes scroll {
    0% { top: 6px; opacity: 1; }
    100% { top: 20px; opacity: 0; }
}

/* Projects */
.project-container {
    display: flex;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    align-items: center;
    gap: 50px;
}
.project-panel.reverse .project-container {
    flex-direction: row-reverse;
}
.project-info {
    flex: 1;
}
.project-visual {
    flex: 1;
}
.project-number {
    font-size: 4rem;
    font-weight: 800;
    font-family: 'Outfit';
    color: var(--glass-border);
    margin-bottom: -20px;
}
.project-info h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
}
.project-info p {
    color: var(--text-secondary);
    margin-bottom: 30px;
    font-size: 1.1rem;
}
.tech-stack {
    display: flex;
    gap: 10px;
    margin-bottom: 30px;
}
.tag {
    padding: 6px 14px;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 20px;
    font-size: 0.8rem;
    color: var(--accent-blue);
}

.primary-btn {
    text-decoration: none;
    padding: 12px 28px;
    background: linear-gradient(90deg, var(--accent-blue), var(--accent-red));
    color: #000;
    font-weight: 600;
    border-radius: 4px;
    display: inline-block;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.primary-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 240, 255, 0.2);
}

/* Glass Cards for Visuals */
.glass-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    padding: 40px;
    backdrop-filter: blur(20px);
    position: relative;
    overflow: hidden;
    height: 300px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

/* Mockup Elements */
.chart-line { stroke-width: 2; stroke-linecap: round; stroke-linejoin: round; }
.active-line { stroke: var(--accent-red); stroke-dasharray: 200; stroke-dashoffset: 200; animation: draw 3s forwards ease-out alternate infinite;}
.base-line { stroke: var(--text-secondary); opacity: 0.3; }
@keyframes draw { to { stroke-dashoffset: 0; } }

.chart-labels { margin-top: 20px; display: flex; gap: 20px; font-size: 0.9rem;}

.network-mockup { display: flex; gap: 30px; justify-content: center; align-items: center; }
.node-layer { display: flex; flex-direction: column; gap: 10px; }
.node-layer i { width: 12px; height: 12px; border-radius: 50%; background: var(--glass-border); display: block; }
.node-layer.hidden i { background: var(--accent-blue); animation: pulse 1.5s infinite alternate; }
@keyframes pulse { to { transform: scale(1.3); box-shadow: 0 0 10px var(--accent-blue); } }
.data-flow { margin-top: 30px; font-size: 0.9rem; color: var(--accent-red); font-weight: bold; letter-spacing: 1px; }

.rl-mockup { width: 100%; text-align: center; }
.state-action { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
.box { padding: 10px; border: 1px solid var(--glass-border); border-radius: 8px; font-size: 0.8rem; background: rgba(0,0,0,0.5);}
.box.agent { border-color: var(--accent-blue); color: var(--accent-blue); font-weight: bold; }
.arrow { color: var(--text-secondary); }
.reward-feedback { font-size: 0.8rem; color: var(--accent-red); }

/* Footer */
.footer {
    text-align: center;
    padding: 50px;
    border-top: 1px solid var(--glass-border);
    margin-top: 50px;
}
.footer h2 { font-size: 1.5rem; margin-bottom: 10px; color: var(--text-secondary); }
.footer p { font-size: 0.9rem; color: var(--glass-border); }

/* Scroll Animations */
.scroll-reveal {
    opacity: 0;
    transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
}
.scroll-reveal.left { transform: translateX(-50px); }
.scroll-reveal.right { transform: translateX(50px); }
.scroll-reveal.visible {
    opacity: 1;
    transform: translateX(0);
}
